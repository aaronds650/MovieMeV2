{
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/dashboard",
      "destination": "/index.html"
    },
    {
      "source": "/watchlist",
      "destination": "/index.html"
    },
    {
      "source": "/watched",
      "destination": "/index.html"
    },
    {
      "source": "/((?!api)(?!.*\\.).*)",
      "destination": "/index.html"
    }
  ]
}